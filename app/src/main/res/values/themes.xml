<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.OldBooks" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/appcolor1</item>
        <item name="colorPrimaryDark">@color/appcolor1</item>
        <item name="colorAccent">@color/appcolor1</item>
        <item name="android:statusBarColor">@color/appcolor1</item>
        <item name="bottomNavigationStyle">@style/BottomNavigation</item>
    </style>

    <style name="SplashTheme.OldBooks" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash_gradient</item>
        <item name="colorPrimary">@color/appcolor1</item>
        <item name="colorPrimaryDark">@color/appcolor1</item>
        <item name="colorAccent">@color/appcolor1</item>
        <item name="android:statusBarColor">@color/appcolor1</item>
    </style>

    <style name="BottomNavigation" parent="Widget.Design.BottomNavigationView">
        <!-- Customize your bottom navigation bar here -->
        <item name="android:background">@color/appcolor1</item>
        <item name="itemBackground">@color/appcolor1</item>
        <item name="itemTextColor">@color/appcolor3</item>
        <item name="itemIconTint">@color/appcolor3</item>
    </style>

</resources>